@model BTLW.ViewModel.RegisterVM;

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_LayoutRegister.cshtml";
}

<h2> Register </h2>
@using (Html.BeginForm("AuthenRegister", "Demo", FormMethod.Post))
{
    <div class="group">
        <div class="form-control-lg">
            @Html.LabelFor(Model=>Model.TenTK)
            @Html.TextBoxFor(Model=>Model.TenTK,new{placeholder="UserName",@class="form-control"})
            @Html.ValidationMessageFor(Model=>Model.TenTK)
        </div>
        <div class="form-control-lg">
            @Html.LabelFor(Model=>Model.MatKhau)
            @Html.PasswordFor(Model=>Model.MatKhau,new{placeholder="Password",@class="form-control"})
            @Html.ValidationMessageFor(Model=>Model.MatKhau)
        </div>
        <div class="form-control-lg">
            @Html.LabelFor(Model=>Model.ConfirmPassword)
            @Html.PasswordFor(Model=>Model.ConfirmPassword,new{placeholder="Confirm Password",@class="form-control"})
            @Html.ValidationMessageFor(Model=>Model.ConfirmPassword)
        </div>
        <div class="form-control-lg">
            @Html.LabelFor(Model=>Model.LoaiTK)
            @Html.TextBoxFor(Model=>Model.LoaiTK,new{placeholder="TOA",@class="form-control"})
            @Html.ValidationMessageFor(Model=>Model.LoaiTK)
        </div>
        <div class="mb-4">
            <div class="form-check">
                <label class="form-check-label text-muted">
                    <input type="checkbox" class="form-check-input"> I agree to all Terms & Conditions
                </label>
            </div>
        </div>
        <button type="submit" value="Register" class="btn btn-success">Register</button>
    </div>
}

