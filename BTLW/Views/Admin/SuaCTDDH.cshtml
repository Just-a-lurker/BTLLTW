@model BTLW.Models.ChiTietHddh

@{
    ViewData["Title"] = "SuaCTDDH";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>SuaCTDDH</h1>

<h4>ChiTietHddh</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SuaCTDDH">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="MaNoithat" />
            <input type="hidden" asp-for="SoDdh" />
            <div class="form-group">
                <label class="control-label">Số lượng</label>
                <input asp-for="SoLuong" class="form-control" />
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Giảm giá</label>
                <input asp-for="GiamGia" class="form-control" />
                <span asp-validation-for="GiamGia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Thành tiền</label>
                <input asp-for="ThanhTien" class="form-control" />
                <span asp-validation-for="ThanhTien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="DDH">Quay lại</a>
</div>


