@model BTLW.Models.ChiTietHdn

@{
    ViewData["Title"] = "ThemCTHDN";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Thêm chi tiết HĐN</h1>

<p>@TempData["Message"]</p>

<h4>ChiTietHdn</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="ThemCTHDN">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Mã nội thất</label>
                <select asp-for="MaNoithat" class ="form-control" asp-items="ViewBag.MaNoithat"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Số hóa đơn nhập</label>
                <select asp-for="SoHdn" class ="form-control" asp-items="ViewBag.SoHdn"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Số lượng</label>
                <input asp-for="SoLuong" class="form-control" />
                <span asp-validation-for="SoLuong" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Đơn giá</label>
                <input asp-for="DonGia" class="form-control" />
                <span asp-validation-for="DonGia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Giảm giá</label>
                <input asp-for="GiamGia" class="form-control" />
                <span asp-validation-for="GiamGia" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Thành tiền</label>
                <input asp-for="ThanhTien" class="form-control" />
                <span asp-validation-for="ThanhTien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Tạo" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>



