@model BTLW.Models.DonDatHang

@{
    ViewData["Title"] = "SuaDDH";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h1>Sửa @ViewBag.soDDH</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="SuaDDH">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="SoDdh" />
            <div class="form-group">
                <label class="control-label">Mã NV</label>
                <select asp-for="MaNv" class="form-control" asp-items="ViewBag.MaNv"></select>
                <span asp-validation-for="MaNv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Mã khách hàng</label>
                <select asp-for="MaKhach" class="form-control" asp-items="ViewBag.MaKhach"></select>
                <span asp-validation-for="MaKhach" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Ngày đặt</label>
                <input asp-for="NgayDat" class="form-control" />
                <span asp-validation-for="NgayDat" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Ngày giao</label>
                <input asp-for="NgayGiao" class="form-control" />
                <span asp-validation-for="NgayGiao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Tiền đặt cọc</label>
                <input asp-for="DatCoc" class="form-control" />
                <span asp-validation-for="DatCoc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Thuế</label>
                <input asp-for="Thue" class="form-control" />
                <span asp-validation-for="Thue" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Tổng tiền</label>
                <input asp-for="TongTien" class="form-control" />
                <span asp-validation-for="TongTien" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Lưu" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="DDH">Quay lại</a>
</div>
